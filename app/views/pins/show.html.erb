<%= link_to 'Back', pins_path %>
<div class="row">
	<div class="col-md-8 col-md-offset-4">
		<div class="box panel panel-default center">
		<%= image_tag @pin.image.url(:original) %>
			<div class="panel-body">
		        <h3 class="panel-title"><%= @pin.description %><br />
		        <small><%= @pin.user.email if @pin.user %></small></h3>
		    </div>
			<% if @pin.user == current_user %>
				<div class="panel-footer small">
			        <table width="100%">
			        <tr>
			            <td class="text-left">
			              <%= link_to edit_pin_path(@pin) do %>
			              	<span class="glyphicon glyphicon-wrench"></span>Edit
			              <% end %>
			            </td>
			            <td class="text-right">
			               <%= link_to @pin, method: :delete, data: { confirm: 'Are you sure?' } do %>
                      Destroy <span class="glyphicon glyphicon-trash"></span>
                      <% end %>
			            </td>		        
			          </tr>
			        </table>
			    </div>
			<% end %>
		</div>
	</div>
</div>


