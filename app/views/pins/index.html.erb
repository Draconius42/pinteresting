<div id="pins" class="transitions-enabled">
  <div class="row">
    <% @pins.each do |pin| %>

      <div class="col-md-8">
        <div class="box panel panel-default center">
          <%= image_tag pin.image.url(:original) %>
            <div class="panel-body">
              <h3 class="panel-title"><%= pin.description %><br />
              <small><%= pin.user.email if pin.user %></small></h3>
            </div>
            <% if pin.user == current_user %>
            <div class="panel-footer small">
              <table width="100%">
                <tr>
                  <td class="text-left">
                    <%= link_to 'Edit', edit_pin_path(pin) %>
                  </td>
                  <td class="text-right">
                    <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
                  </td>           
                </tr>
              </table>
            </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
</div>