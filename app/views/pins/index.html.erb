<%= render 'pages/home' unless user_signed_in? %>
<div class="center">
   <%= will_paginate @pins, renderer: BootstrapPagination::Rails %>
</div>
<div id="pins" class="transitions-enabled">
  <div class="row">
    <% @pins.each do |pin| %>

      <div class="col-md-8">
        <div class="box panel panel-default center">
          <%= link_to pin_path(pin) do %>
          <%= image_tag pin.image.url(:original) %>
          <% end %>
            <div class="panel-body">
              <h3 class="panel-title"><%= pin.description %><br />
              <small><%= pin.user.name if pin.user %></small></h3>
            </div>
            <% if pin.user == current_user %>
            <div class="panel-footer small">
              <table width="100%">
                <tr>
                  <td class="text-left">
                     <%= link_to edit_pin_path(pin) do %>
                      <span class="glyphicon glyphicon-wrench"></span>Edit
                    <% end %>
                  </td>
                  <td class="text-right">
                    <%= link_to pin, method: :delete, data: { confirm: 'Are you sure?' } do %>
                      Destroy <span class="glyphicon glyphicon-trash"></span>
                      <% end %> 
                  </td>           
                </tr>
              </table>
            </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
</div>

<div class="center">
   <%= will_paginate @pins, renderer: BootstrapPagination::Rails %>
</div>